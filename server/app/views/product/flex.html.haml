    = link_to 'Watch the video >>>', '#', :class => 'watch'

  #step_3.tab
    %h3 Upload the Application Code

    .tab_illustration
      = image_tag "http://placekitten.com/g/300/200",
              :title => "Replace withillustration of some sort", 
