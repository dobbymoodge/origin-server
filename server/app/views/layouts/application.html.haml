!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", "xml:lang" => "en"}
  %head
    %title Red Hat OpenShift
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}

    = stylesheet_link_tag "/app/stylesheets/1_reset", "/app/stylesheets/2_960_24_col", "/app/stylesheets/3_text", "/app/stylesheets/cloud.rh.css"

    = javascript_include_tag "/app/javascripts/jquery-1.5.1.min.js"

    :javascript
      /* JQuery will interfere with prototype unless */
      $j = jQuery.noConflict();
      /* JQuery can be referenced by $j from now on */

    = javascript_include_tag "/app/javascripts/prototype"
    = javascript_include_tag "/app/javascripts/application"
    = javascript_include_tag "/app/javascripts/effects"
    = javascript_include_tag "/app/javascripts/controls"
    = javascript_include_tag "/app/javascripts/dragdrop"
    = javascript_include_tag "/app/javascripts/jquery.slideshow.minified.js"
    = javascript_include_tag "http://cdn.jquerytools.org/1.2.5/tiny/jquery.tools.min.js"
    = javascript_include_tag '/app/javascripts/jquery.validate.min.js'
    = javascript_include_tag "/app/javascripts/rails"
    = javascript_include_tag "/app/javascripts/init"
    = csrf_meta_tag

  %body(class="#{controller.controller_name} #{controller.action_name}")
    
    = render 'shared/omniture_code'
    
    #horrible_wrapper
      #head.container_24
        #logo.grid_6.alpha
          = link_to image_tag("/app/images/logo-blue.png", :alt => "OpenShift"), root_path

        #header_right.grid_18.omega
          - if session[:login]
            #logout
              %a(href='/app/logout') Logout
            .clear
          - else
            #login
              %a(href='/app/login') Login
            .clear
          
          #mainslug
            = image_tag '/app/images/shadowman.png',
                        :alt => 'Red Hat, the Open Source Leader'
            %p
              Free, Portable Cloud Services from the Enterprise Open Source Leader

        .clear

        #nav.grid_24.alpha.omega
          %ul
            %li
              %a(href="#") About OpenShift
            %li
              = link_to 'Express', express_url, :class => 'express'
            %li
              = link_to 'Flex', flex_url, :class => 'flex'
            %li
              = link_to 'Power', power_url, :class => 'power'
            %li
              = link_to 'Community', '/community'
            %li
              = link_to 'FAQ', '/faq'
            %li
              = link_to 'Help', '/forums'

        .clear

      = content_for?(:sub_layout) ? yield(:sub_layout) : yield

      .container_24#footer
        .prefix_1.grid_3
          %h5 Red Hat
          %ul
            %li
              %a(href="#") About
            %li
              %a(href="#") Legal
            %li
              %a(href="#") Privacy Policy
            %li
              %a(href="#") Partner with Us

        .prefix_1.grid_3
          %h5 OpenShift
          %ul
            %li
              %a(href="#") How it works
            %li
              %a(href="#") Pricing
            %li
              %a(href="#") News &amp; Events
            %li
              %a(href="#") Blog

        .prefix_1.grid_3
          %h5 Solutions
          %ul
            %li
              = link_to 'Express', express_url, :class => 'express'
            %li
              = link_to 'Flex', flex_url, :class => 'flex'
            %li
              = link_to 'Power', power_url, :class => 'power'

        .prefix_1.grid_3
          %h5 Resources
          %ul
            %li
              %a(href="#") Community
            %li
              %a(href="#") Documentation
            %li
              %a(href="#") Tutorials
            %li
              %a(href="#") Videos

        .prefix_1.grid_7
          %h5 Powered By:

        .clear

      .container_24#subfooter
        .grid_1.suffix_1
          %img(src="/app/images/shadowman.png" alt="Red Hat Logo")

        .grid_21.suffix_1
          %p Copyright &copy; 2011 Red Hat, Inc.
          %ul
            %li
              %a(href="#") Accessibility Statement
            %li
              %a(href="#") Privacy Policy
            %li
              %a(href="#") Terms of Use
            %li
              %a(href="#") Patent Promise
            %li
              %a(href="#") Trademark Guidelines

          %ul
            %li
              %a(href="#") About Red Hat
            %li
              %a(href="#") Contact Us
            %li
              %a(href="#") Careers
            %li
              %a(href="#") Site Map
            %li
              %a(href="#") FAQs
            %li
              %a(href="#") System Requirements
        .clear
