-# file: Universal site layout with header/footer/main nav
!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", "xml:lang" => "en"}
  %head
    %title Red Hat OpenShift
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
    %link(rel="shortcut icon" href="/app/images/favicon.ico")

    = stylesheet_link_tag "/app/stylesheets/1_reset", "/app/stylesheets/2_960_24_col", "/app/stylesheets/3_text", "/app/stylesheets/cloud.rh.css"

    = javascript_include_tag "/app/javascripts/jquery-1.5.1.min.js"

    :javascript
      /* JQuery will interfere with prototype unless */
      $j = jQuery.noConflict();
      /* JQuery can be referenced by $j from now on */

    = javascript_include_tag "/app/javascripts/prototype"
    = javascript_include_tag "/app/javascripts/application"
    = javascript_include_tag "/app/javascripts/effects"
    = javascript_include_tag "/app/javascripts/controls"
    = javascript_include_tag "/app/javascripts/dragdrop"
    = javascript_include_tag "/app/javascripts/jquery.slideshow.minified.js"
    = javascript_include_tag "/app/javascripts/jquery.tools.min.js"
    = javascript_include_tag '/app/javascripts/jquery.validate.min.js'
    = javascript_include_tag "/app/javascripts/rails"
    = javascript_include_tag "/app/javascripts/init"
    = csrf_meta_tag

  %body(class="#{controller.controller_name} #{controller.action_name}")
    
    = render 'shared/omniture_code'
    
    #horrible_wrapper
      #head.container_24
        #logo.grid_18.alpha
          = link_to image_tag("/app/images/logo.png", :alt => "OpenShift"), root_path

        #header_right.grid_6.omega
          - if session[:login]
            #logout
              %a(href='/app/logout') Logout
            .clear
          - else
            #login
              %a(href='/app/login') Login
            .clear
          
          #mainslug
            = image_tag '/app/images/shadowman.png',
                        :alt => 'Red Hat, the Open Source Leader'
           
        .clear

        #nav.grid_24.alpha.omega
          %ul
            %li
              = link_to 'About OpenShift', about_url
            %li
              = link_to 'Express', express_url, :class => 'express'
            %li
              = link_to 'Flex', flex_url, :class => 'flex'
            %li
              = link_to 'Power', power_url, :class => 'power'
            %li
              = link_to 'Community', '/community'
            %li
              = link_to 'FAQ', '/faq'
            %li
              = link_to 'Help', '/forums'

        .clear

      = content_for?(:sub_layout) ? yield(:sub_layout) : yield

      .container_24#footer
        .prefix_1.grid_3
          %h5 Fine Print
          %ul
            %li
              = link_to 'Terms', service_terms_path
            %li
              = link_to 'Website Terms', site_terms_path
            %li
              = link_to 'Privacy Policy', 'http://www.redhat.com/legal/privacy_statement.html'


        .prefix_1.grid_3
          %h5 OpenShift
          %ul
            %li
              = link_to 'News and Events', '/news'
            %li
              = link_to 'Blog', '/blogs'
            %li
              = link_to 'Partners', '#'

        .prefix_1.grid_3
          %h5 Solutions
          %ul
            %li
              = link_to 'Express', express_url, :class => 'express'
            %li
              = link_to 'Flex', flex_url, :class => 'flex'
            %li
              = link_to 'Power', power_url, :class => 'power'

        .prefix_1.grid_3
          %h5 Resources
          %ul
            %li
              = link_to 'Community', '/community'
            %li
              = link_to 'Documentation', '/documents'
            %li
              = link_to 'Videos', '/videos'
            %li
              = link_to 'Forums', '/forums'

        .prefix_1.grid_7
          %h5 Powered By:

        .clear

      .container_24#subfooter
        .grid_1.suffix_1
          %img(src="/app/images/shadowman.png" alt="Red Hat Logo")

        .grid_21.suffix_1
          %p Copyright &copy; 2011 Red Hat, Inc.
          %ul
            %li
              = link_to 'About Red Hat', 'http://www.redhat.com/about/'
            %li
              %a(href="#") Contact Us
            %li
              %a(href="#") Site Map

        .clear
