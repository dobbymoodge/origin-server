!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", "xml:lang" => "en"}
  %head
    %title Red Hat OpenShift
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}

    %link{"rel" => "stylesheet", "href" => "/app/stylesheets/reset.css", "type" => "text/css"}
    %link{"rel" => "stylesheet", "href" => "/app/stylesheets/text.css", "type" => "text/css"}
    %link{"rel" => "stylesheet", "href" => "/app/stylesheets/cloud.rh.css", "type" => "text/css"}
    %link{"rel" => "stylesheet", "href" => "/app/stylesheets/960_24_col.css", "type" => "text/css"}

    %script{:type => "text/javascript", :src  => "/app/javascripts/jquery-1.5.1.min.js"}

    %script{:type => "text/javascript"}
      //JQuery will interfere with prototype unless
      $j = jQuery.noConflict();
      //JQuery can be referenced by $j from now on

    %script{:type => "text/javascript", :src  => "/app/javascripts/prototype.js"}
    %script{:type => "text/javascript", :src  => "/app/javascripts/application.js"}
    %script{:type => "text/javascript", :src  => "/app/javascripts/effects.js"}
    %script{:type => "text/javascript", :src  => "/app/javascripts/controls.js"}
    %script{:type => "text/javascript", :src  => "/app/javascripts/dragdrop.js"}
    %script{:type => "text/javascript", :src  => "/app/javascripts/jquery.slideshow.minified.js"}
    %script{:type => "text/javascript", :src  => "/app/javascripts/rails.js"}
    %script{:type => "text/javascript", :src  => "/app/javascripts/init.js"}
    = csrf_meta_tag

  %body
    #head.container_24
      #logo.grid_6.alpha
        %a(href="#")
          %img(src="/app/images/logo.png" alt="OpenShift")

      #header_right.grid_18.omega
        - if session[:login]
          #logout
            %a(href='logout') Logout
          .clear
        - else
          #login
            %a(href='login') Login
          .clear

        %p#mainslug
          Free &amp; portable cloud services from the enterprise open source leader.
		
      .clear

      #nav.grid_24.alpha.omega
        %ul
          %li
            %a(href="#") About OpenShift
          %li
            %a(href="#") Express
          %li
            %a(href="#") Flex
          %li
            %a(href="#") Power
          %li
            %a(href="#") Community
          %li
            %a(href="#") FAQ
          %li
            %a(href="#") Help

      .clear

    = yield

    .container_24#footer
      .prefix_1.grid_3
        %h5 Red Hat
        %ul
          %li
            %a(href="#") About
          %li
            %a(href="#") Legal
          %li
            %a(href="#") Privacy Policy
          %li
            %a(href="#") Partner with Us

      .prefix_1.grid_3
        %h5 Red Hat Cloud
        %ul
          %li
            %a(href="#") How it works
          %li
            %a(href="#") Pricing
          %li
            %a(href="#") News &amp; Events
          %li
            %a(href="#") Blog

      .prefix_1.grid_3
        %h5 Solutions
        %ul
          %li
            %a(href="#") Express
          %li
            %a(href="#") Flex
          %li
            %a(href="#") Power

      .prefix_1.grid_3
        %h5 Resources
        %ul
          %li
            %a(href="#") Community
          %li
            %a(href="#") Documentation
          %li
            %a(href="#") Tutorials
          %li
            %a(href="#") Videos

      .prefix_1.grid_7
        %h5 Powered By:

      .clear

    .container_24#subfooter
      .grid_1.suffix_1
        %img(src="/app/images/shadowman.png" alt="Red Hat Logo")

      .grid_21.suffix_1
        %p Copyright &copy; 2011 Red Hat, Inc.
        %ul
          %li
            %a(href="#") Accessibility Statement
          %li
            %a(href="#") Privacy Policy
          %li
            %a(href="#") Terms of Use
          %li
            %a(href="#") Patent Promise
          %li
            %a(href="#") Trademark Guidelines

        %ul
          %li
            %a(href="#") About Red Hat
          %li
            %a(href="#") Contact Us
          %li
            %a(href="#") Careers
          %li
            %a(href="#") Site Map
          %li
            %a(href="#") FAQs
          %li
            %a(href="#") System Requirements
      .clear
