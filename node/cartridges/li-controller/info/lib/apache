function rm_httpd_proxy {
    uuid=$1
    namespace="$2"
    application=$3
    rm -rf /etc/httpd/conf.d/libra/${uuid}_${namespace}_${application}.conf /etc/httpd/conf.d/libra/${uuid}_${namespace}_${application} || echo "Could not remove apache definition" 1>&2
    /sbin/service httpd configtest 2> /dev/null && /sbin/service httpd graceful || echo "Failed to restart master httpd, please contact support" 1>&2
}