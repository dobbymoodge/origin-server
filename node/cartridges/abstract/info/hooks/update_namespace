# Update the namespace of the application

# Exit on any errors
set -e
#set -x

CART_DIR=/usr/libexec/li/cartridges

source ${CART_DIR}/li-controller/info/lib/util
source ${CART_DIR}/li-controller/info/lib/apache
source ${CART_DIR}/li-controller/info/lib/selinux

load_node_conf

function print_help {
    echo "Usage: $0 app-name new_namespace old_namespace uuid"

    echo "$0 $@" | logger -p local0.notice -t libra_httpd_update_namespace
    exit 1
}

function mv_symlink {
    # Check if unobfuscate is set in /etc/libra/node.conf
    # If it is set, move symlink

    old_namespace=$1
    new_namespace=$2
    appname=$3

    if [ $unobfuscate -eq 1 ]
    then
        mv "${libra_dir}/${appname}-${old_namespace}" "${libra_dir}/${appname}-${new_namespace}"
    fi
}

[ $# -eq 4 ] || print_help

new_namespace=`basename $2`
old_namespace=`basename $3`
application="$1"
uuid=$4

setup_basic_vars

check_app_dir_exists

. $APP_HOME/.env/OPENSHIFT_APP_TYPE

CART_INFO_DIR=$CART_DIR/$OPENSHIFT_APP_TYPE/info

mv_symlink $old_namespace $new_namespace $application

if [ -f $APP_HOME/.env/OPENSHIFT_APP_DNS ]
then
    echo "export OPENSHIFT_APP_DNS='http://${application}-${new_namespace}.${libra_domain}/'" > $APP_HOME/.env/OPENSHIFT_APP_DNS
fi

if [ -f "/etc/httpd/conf.d/libra/${uuid}_${old_namespace}_${application}.conf" ]
then
  sed -i "s/ServerName ${application}-${old_namespace}./ServerName ${application}-${new_namespace}./" /etc/httpd/conf.d/libra/${uuid}_${old_namespace}_${application}/00000_default.conf
  sed -i "s/_${old_namespace}_${application}/_${new_namespace}_${application}/g" /etc/httpd/conf.d/libra/${uuid}_${old_namespace}_${application}.conf
  mv /etc/httpd/conf.d/libra/${uuid}_${old_namespace}_${application}.conf /etc/httpd/conf.d/libra/${uuid}_${new_namespace}_${application}.conf
  mv /etc/httpd/conf.d/libra/${uuid}_${old_namespace}_${application} /etc/httpd/conf.d/libra/${uuid}_${new_namespace}_${application}
  restart_httpd_graceful
fi

if [ -f $CART_INFO_DIR/bin/update_namespace.sh ]
then
  $CART_INFO_DIR/bin/update_namespace.sh $application $new_namespace $old_namespace $uuid
fi