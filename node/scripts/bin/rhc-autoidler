#!/bin/bash

export PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin:/root/bin:$PATH

function get_appids_to_idle() {
    /usr/bin/rhc-list-stale 15 2>/dev/null | /bin/awk '{print $1}'
}

function print_stats() {
    (
        echo -n "$1: " ;
        /usr/bin/rhc-idler-stats
    ) | /usr/bin/logger -p local0.notice -t libra_auto_idler
}

print_stats "Before"

for user in `get_appids_to_idle`
do
    /usr/bin/rhc-idler -u $user > /dev/null 2>&1

    # Report to apptegic
    inner="{\"app_uuid\": \"$user\", \"action\":\"idle\"}"
    curl -k -v -H "Accept: application/json" -X POST -d json_data="$inner" https://127.0.0.1/broker/nurture
done

print_stats "After"
