#!/bin/bash

function libra_users() {
    grep ":libra guest:" /etc/passwd | cut -d: -f1
}

days=15
[ -z $1 ] || days=$1

for f in $(libra_users)
do
    APPHOME=/var/lib/libra/$f
    if [ -d "$APPHOME" ]
    then
        if ! GIT_DIR=`echo $APPHOME/git/*/` git log --since="$(/bin/date "+%Y-%m-%d" --date="60 days ago")" | grep -q commit
        then
            . $APPHOME/.env/OPENSHIFT_APP_DIR
            #find $OPENSHIFT_APP_DIR -mtime -60 -name 'access_log-*'
            echo "$f is stale"
        fi
    fi
done

