#!/bin/bash

function libra_users() {
    grep ":libra guest:" /etc/passwd | cut -d: -f1
}

days=15
[ -z $1 ] || days=$1

for f in $(libra_users)
do
    APPHOME=/var/lib/libra/$f
    if [ -d "$APPHOME" ]
    then
        if ! GIT_DIR=`echo $APPHOME/git/*/` git log --since="$(/bin/date "+%Y-%m-%d" --date="$days days ago")" | grep -q commit
        then
            if /usr/bin/rhc-app-idle $f $days
            then
                echo "$f is stale"
            fi
        fi
    fi
done

