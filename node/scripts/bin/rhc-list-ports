#!/bin/bash

# List ports available to user:

echo "The following ports will be available on your local machine" 1>&2
/usr/sbin/lsof -iTCP -sTCP:LISTEN -P 2> /dev/null | /bin/awk '/LISTEN/{ print $9 }' | /usr/bin/uniq
/usr/sbin/lsof -iTCP -sTCP:LISTEN -P 2> /dev/null | /bin/awk '/LISTEN/{ print $1" -> "$9 }' | /usr/bin/uniq 1>&2
