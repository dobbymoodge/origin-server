#!/bin/bash
# Idle or Restore applications
#
# rhc-idler takes an existing running application and disables it to free up
# memory and cpu resources.  It uses rhc-restorer to automatically turn the
# application back on when a request comes to it (like 
# http://app-dom.rhcloud.com)

TRUE=0
FALSE=1

function print_help {
    echo "Usage: $0"
    echo "  -u UUID       idles the app"
    echo "  -l            list all idled apps"
    exit 1
}

function libra_users() {
    grep ":libra guest:" /etc/passwd | cut -d: -f1
}

function print_idled {
    for appid in $(libra_users)
    do
        if is_idled "$appid"
        then
            echo "$appid is idled"
        fi
    done
}

function get_state {
    source "/var/lib/stickshift/$1/.env/OPENSHIFT_HOMEDIR"
    cat $OPENSHIFT_HOMEDIR/app/.state
}

function is_idled {
    appid=$1

    HTTP_DIR=`dirname "/etc/httpd/conf.d/stickshift/${uuid}"*/00000_default.conf`
    if ! grep -q ' #ProxyPass' $HTTP_DIR/*.conf 2>/dev/null
    then
        return $FALSE
    fi

    if [ ! -f $HTTP_DIR/0000000000000_disabled.conf ]
    then
        return $FALSE
    fi

    _test=`get_state $appid`
    return `test idle = "$_test"`
}

function is_stopped {
    _test=`get_state $1`
    return `test stopped = "$_test"`
}

while getopts 'u:dl' OPTION
do
case $OPTION in
        u) uuid=$OPTARG
    ;;
        d) set -x
    ;;
        l) list_idled="TRUE"
    ;;
        ?) print_help
    ;;
esac
done

if [ ! -z "$list_idled" ]
then
    print_idled
    exit 0
fi

if [ -z "$uuid" ] || ! [ -d "/var/lib/stickshift/$uuid" ]
then
    print_help
fi

# Get the libra_server
source /etc/stickshift/stickshift-node.conf
source "/var/lib/stickshift/${uuid}/.env/OPENSHIFT_HOMEDIR"

if `is_idled "$uuid"` || `is_stopped "$uuid"` ; then
    exit 0 # app is already idled or stopped, nothing to do
fi

HTTP_DIR=`dirname "/etc/httpd/conf.d/stickshift/${uuid}"*/00000_default.conf`
sed -i "s/ ProxyPass/ #ProxyPass/g" $HTTP_DIR/*.conf


cat > $HTTP_DIR/0000000000000_disabled.conf <<EOF
Alias / /var/www/html/restorer.php/${uuid}/
EOF

service httpd graceful

service libra stopuser "${uuid}"

# Disable
# code copied from node/lib/util_ext
runuser --shell /bin/sh "$uuid" -c "echo idle >$OPENSHIFT_HOMEDIR/app/.state"

# Report to apptegic/nurture
curl -sk -d "json_data={\"app_uuid\":\"${uuid}\",\"action\":\"idle\"}" -X POST https://${BROKER_HOST}/broker/nurture >/dev/null 2>&1 &

source "/var/lib/stickshift/${uuid}/.env/OPENSHIFT_RUN_DIR"
touch "${OPENSHIFT_RUN_DIR}/stop_lock"

echo "Idled: ${uuid}" | /usr/bin/logger -p local0.notice -t rhc_idler
