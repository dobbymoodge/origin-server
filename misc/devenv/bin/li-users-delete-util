#!/usr/bin/env oo-ruby
require 'rubygems'
require '/var/www/openshift/broker/config/environment'

def p_usage
    puts <<USAGE
Usage: #{$0}
Utility to cleanup user record from mongo
                
  -h|--help      Show Usage info

USAGE
exit 255
end

opts = GetoptLong.new(["--help",  "-h", GetoptLong::NO_ARGUMENT])
opt = {}
opts.each do |o, a|
    opt[o[2..-1]] = a.to_s
end

p_usage if opt['help']


CloudUser.delete_all
Domain.delete_all
Application.delete_all
