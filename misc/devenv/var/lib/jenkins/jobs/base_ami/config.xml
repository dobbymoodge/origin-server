<?xml version='1.0' encoding='UTF-8'?>
<project>
  <actions/>
  <description></description>
  <logRotator>
    <daysToKeep>100</daysToKeep>
    <numToKeep>10</numToKeep>
    <artifactDaysToKeep>10</artifactDaysToKeep>
    <artifactNumToKeep>10</artifactNumToKeep>
  </logRotator>
  <keepDependencies>false</keepDependencies>
  <properties>
    <hudson.model.ParametersDefinitionProperty>
      <parameterDefinitions>
        <hudson.model.StringParameterDefinition>
          <name>YUM_REPO</name>
          <description></description>
          <defaultValue>candidate</defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>BRANCH</name>
          <description></description>
          <defaultValue>master</defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>DEV_TOOLS_EXT_REPO</name>
          <description></description>
          <defaultValue>li</defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>DEV_TOOLS_REPO</name>
          <description></description>
          <defaultValue>origin-dev-tools</defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>IMAGE_BASE_NAME</name>
          <description></description>
          <defaultValue>devenv</defaultValue>
        </hudson.model.StringParameterDefinition>
      </parameterDefinitions>
    </hudson.model.ParametersDefinitionProperty>
  </properties>
  <scm class="hudson.scm.NullSCM"/>
  <canRoam>true</canRoam>
  <disabled>true</disabled>
  <blockBuildWhenDownstreamBuilding>true</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers class="vector">
    <hudson.triggers.TimerTrigger>
      <spec>@weekly</spec>
    </hudson.triggers.TimerTrigger>
  </triggers>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.tasks.Shell>
      <command># Delete the previous repo clone directories
rm -rf $DEV_TOOLS_REPO $DEV_TOOLS_EXT_REPO

# Clone the repos
git clone git@github.com:openshift/${DEV_TOOLS_EXT_REPO}.git
pushd $DEV_TOOLS_EXT_REPO
  git checkout $BRANCH
popd
git clone git@github.com:openshift/${DEV_TOOLS_REPO}.git
pushd $DEV_TOOLS_REPO
  git checkout $BRANCH
popd

if [ $BRANCH == master ]
then
  IMAGE_NAME=${IMAGE_BASE_NAME}-base
else
  IMAGE_NAME=${IMAGE_BASE_NAME}-${BRANCH}-base
fi

pushd li
  build/devenv build ${IMAGE_NAME} ${BUILD_NUMBER} --install_required_packages --register --terminate --yum_repo=$YUM_REPO --branch=$BRANCH
popd</command>
    </hudson.tasks.Shell>
  </builders>
  <publishers>
    <hudson.tasks.Mailer>
      <recipients>libra-devel@redhat.com</recipients>
      <dontNotifyEveryUnstableBuild>false</dontNotifyEveryUnstableBuild>
      <sendToIndividuals>false</sendToIndividuals>
    </hudson.tasks.Mailer>
  </publishers>
  <buildWrappers/>
</project>