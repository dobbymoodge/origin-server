def usage
    puts <<USAGE
== Synopsis

cdk-proxy_alloc_next_port: Allocates the next free proxy port for a given target.
  This command must be run as root.

== Usage

cdk-proxy-alloc-next-port  --with-app-uuid APP_UUID --with-container-uuid UUID --with-proxy-target TARGET

Options:
-h|--help:
   Prints this message

UUID: Unique identifier for the application
TARGET: The proxy target (ex: 127.0.250.1:3306)

USAGE
end

require 'cloud-sdk-node'
opts = GetoptLong.new(
    ["--with-app-uuid",       "-a", GetoptLong::REQUIRED_ARGUMENT],
    ["--with-container-uuid", "-c", GetoptLong::REQUIRED_ARGUMENT],
    ["--with-proxy-target",   "-t", GetoptLong::REQUIRED_ARGUMENT],
)

args = {}
begin
    opts.each{ |k,v| args[k]=v }
rescue GetoptLong::Error => e
    usage
    exit -100
end

if args["--help"]
  usage
  exit -1
end

uuid = args['--with-container-uuid']
app_uuid = args['--with-app-uuid']
proxy_target = args['--with-proxy-target']

unless uuid and proxy_target
  usage
  exit -100
end

begin
  container = Cloud::Sdk::ApplicationContainer.new(uuid,uuid)
  proxy_port = container.user.proxy_alloc_next_port(proxy_target)
  print "#{proxy_port}\n"
rescue Exception => e
  $stderr.puts(e.message)
  exit -1
else
  exit 0
end
