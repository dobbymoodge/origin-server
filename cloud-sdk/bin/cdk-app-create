def usage
    puts <<USAGE
== Synopsis

cdk-app-create: Creates a new application. 
  This command must be run as root.

== Usage

cdk-app-create [UUID] [--named NAME] [--with-capabilities CAPABILITIES]

Options:
-h|--help:
   Prints this message

UUID: Unique identifier for the application
NAME: The name of the application to create

USAGE
end

require 'cloud-sdk'
opts = GetoptLong.new(
    ["--named",                  GetoptLong::OPTIONAL_ARGUMENT],
    ["--with-capabilities",      GetoptLong::OPTIONAL_ARGUMENT],
    ["--porcelain",        "-q", GetoptLong::NO_ARGUMENT],
    ["--debug",            "-d", GetoptLong::NO_ARGUMENT],
    ["--help",             "-h", GetoptLong::NO_ARGUMENT]
)

args = {}
begin
    opts.each{ |k,v| args[k]=v }
rescue GetoptLong::Error => e
    usage
    exit -100
end

$cdk_debug = true if args['--debug']
$porcelin = args['--porcelain'] ? true : false
uuid = ARGV.shift
name = args['--named']
required_capabilities = args['--with-capabilities']