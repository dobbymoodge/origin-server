def usage
    puts <<USAGE
== Synopsis

cdk-authorized-ssh-key-remove: Removes an authorized ssh key from the app.
  This command must be run as root.

== Usage

cdk-authorized-ssh-key-remove [--with-uuid UUID] [--with-ssh-key KEY]

Options:
-h|--help:
   Prints this message

UUID: Unique identifier for the application
SSH_KEY: The ssh key to remove

USAGE
end

require 'cloud-sdk'
require 'cloud-sdk/utils/shell_exec'
opts = GetoptLong.new(
    ["--with-uuid",        "-c", GetoptLong::REQUIRED_ARGUMENT],
    ["--with-ssh-key",     "-s", GetoptLong::REQUIRED_ARGUMENT]
)

args = {}
begin
    opts.each{ |k,v| args[k]=v }
rescue GetoptLong::Error => e
    usage
    exit -100
end

uuid = args['--with-uuid']
ssh_key = args['--with-ssh-key']

cmd = File.join(Cloud::SDK::SDK_PATH, "legacy/remove-authorized-ssh-key") + " #{uuid} #{ssh_key}"

out,err,rc = Cloud::SDK::Utils::ShellExec.shellCmd(cmd)

$stderr.puts(err)
$stdout.puts(out)
exit(rc)