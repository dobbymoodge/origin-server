# Destroys http instance

if [ -f '/etc/libra/node.conf' ]
then
    . /etc/libra/node.conf
elif [ -f 'node.conf' ]
then
    . node.conf
else
    echo "node.conf not found.  Cannot continue" 1>&2
    exit 3
fi

if [ -f '/etc/libra/node_data.conf' ]
then
    . /etc/libra/node_data.conf
elif [ -f 'node_data.conf' ]
then
    . node_data.conf
else
    echo "node_data.conf not found.  Cannot continue" 1>&2
    exit 3
fi

CART_DIR=${CART_DIR:=/usr/libexec/li/cartridges}

source ${CART_DIR}/li-controller/info/lib/selinux

function print_help {
    echo "Usage: $0 app-name namespace uuid"

    echo "$0 $@" | logger -p local0.notice -t libra_mysql_deconfigure
    exit 1
}

while getopts 'd' OPTION
do
    case $OPTION in
        d) set -x
        ;;
        ?) print_help
        ;;
    esac
done


[ $# -eq 3 ] || print_help

application="$1"
namespace=$2 # Not used
uuid=$3

APP_HOME="$libra_dir/$uuid/"
APP_DIR="$APP_HOME/$application"
MYSQL_DIR="$APP_HOME/mysql-5.1/"

if [ ! -d "$APP_DIR" ]
then
  exit 125
fi

#
# Get UID information and CVAL
#
uid=$(id -u "$uuid")
mcs_level=`openshift_mcs_level $uid`

#
# Remove environment variables
#
/bin/rm -f $APP_HOME/.env/OPENSHIFT_DB_USERNAME $APP_HOME/.env/OPENSHIFT_DB_PASSWORD $APP_HOME/.env/OPENSHIFT_DB_TYPE $APP_HOME/.env/OPENSHIFT_DB_HOST $APP_HOME/.env/OPENSHIFT_DB_PORT $APP_HOME/.env/OPENSHIFT_DB_SOCKET $APP_HOME/.env/OPENSHIFT_DB_URL $APP_HOME/.env/OPENSHIFT_DB_CTL_SCRIPT $APP_HOME/.env/OPENSHIFT_DB_MYSQL_51_DUMP $APP_HOME/.env/OPENSHIFT_DB_MYSQL_51_DUMP_CLEANUP $APP_HOME/.env/OPENSHIFT_DB_MYSQL_51_RESTORE

#
# Stop app
#
/bin/su -s /bin/sh "$uuid" -c "runcon -t libra_t -l $mcs_level $MYSQL_DIR/${application}_mysql_ctl.sh stop"

# Confirm pid is gone before removing apps
i=0
while [ -f ${MYSQL_DIR}/pid/mysql.pid ] && [ $i -lt 30 ]
    do
    sleep .2
    i=$(($i + 1))
done

runcon -l s0-s0:c0.c1023 rm -rf "$MYSQL_DIR" "$MYSQL_DIR/${application}_mysql_ctl.sh"

