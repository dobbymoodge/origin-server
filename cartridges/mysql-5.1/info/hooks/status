# Creates a per customer httpd instance

# Exit on any errors
set -e

CART_DIR=/usr/libexec/li/cartridges
source ${CART_DIR}/li-controller/info/lib/util

load_node_conf

function print_help {
    echo "Usage: $0 app-name namespace uuid"
    echo "Get application status"

    echo "$0 $@" | logger -p local0.notice -t libra_mysql_status
    exit 1
}

while getopts 'd' OPTION
do
    case $OPTION in
        d) set -x
        ;;
        ?) print_help
        ;;
    esac
done


[ $# -eq 3 ] || print_help

customer_id=`basename $3`
application="$1"

APP_HOME="$libra_dir/$customer_id/"
APP_DIR="$APP_HOME/$application"
MYSQL_DIR="$APP_HOME/mysql-5.1/"

if [ ! -d "$APP_DIR" ]
then
  exit 125
fi

#
# Get the status of the application
#

runuser --shell /bin/sh "$customer_id" "$MYSQL_DIR/${application}_mysql_ctl.sh" status
