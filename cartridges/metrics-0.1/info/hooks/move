#!/bin/bash

# Move to a new ip

# Exit on any errors
set -e

source "/etc/openshift/node.conf"
source ${CARTRIDGE_BASE_PATH}/abstract/info/lib/util
source ${CARTRIDGE_BASE_PATH}/abstract/info/lib/apache
source ${CARTRIDGE_BASE_PATH}/abstract/info/lib/network

while getopts 'd' OPTION
do
    case $OPTION in
        d) set -x
        ;;
        ?) print_help
        ;;
    esac
done

[ $# -eq 3 ] || print_help

cartridge_type="metrics-0.1"
namespace=`basename $2`
application="$1"
uuid=$3

setup_basic_vars

CART_INFO_DIR=$CARTRIDGE_BASE_PATH/embedded/$cartridge_type/info

METRICS_DIR=$(get_cartridge_instance_dir "$cartridge_type")
observe_setup_var_lib_dir "$METRICS_DIR"

METRICS_IP=`embedded_find_open_ip $uid $APP_HOME`
echo "export OPENSHIFT_METRICS_IP='$METRICS_IP'" > $APP_HOME/.env/OPENSHIFT_METRICS_IP
$CART_INFO_DIR/bin/deploy_httpd_config.sh $application $uuid $METRICS_IP
$CART_INFO_DIR/bin/deploy_httpd_proxy.sh $application $namespace $uuid $METRICS_IP
