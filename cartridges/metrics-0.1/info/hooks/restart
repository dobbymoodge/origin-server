#!/bin/bash

# Restarts instance

# Exit on any errors
set -e

function print_help {
    echo "Usage: $0 app-name namespace uuid"
    echo "Stop a running application and disable it"

    echo "$0 $@" | logger -p local0.notice -t stickshift_metrics_restart
    exit 1
}

while getopts 'd' OPTION
do
    case $OPTION in
        d) set -x
        ;;
        ?) print_help
        ;;
    esac
done


[ $# -eq 3 ] || print_help

cartridge_type="metrics-0.1"
source "/etc/stickshift/stickshift-node.conf"
source ${CARTRIDGE_BASE_PATH}/abstract/info/lib/util

setup_basic_hook "$1" $2 $3

METRICS_DIR=$(get_cartridge_instance_dir "$cartridge_type")
METRICS_CTL_SCRIPT="$METRICS_DIR/${application}_metrics_ctl.sh"

#
# Start application
#
rm -f "$METRICS_DIR/run/stop_lock"
run_as_user "$METRICS_CTL_SCRIPT restart"
