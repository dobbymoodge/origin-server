# Creates a metrics instance

# Exit on any errors
set -e

function print_help {
    echo "Usage: $0 app-name namespace uuid"

    echo "$0 $@" | logger -p local0.notice -t libra_metrics_configure
    exit 1
}

while getopts 'd' OPTION
do
    case $OPTION in
        d) set -x
        ;;
        ?) print_help
        ;;
    esac
done

[ $# -eq 3 ] || print_help

CART_DIR=${CART_DIR:=/usr/libexec/li/cartridges}
source ${CART_DIR}/abstract/info/lib/util

app_type="metrics-0.1"
setup_embedded_configure "$1" $2 $3

METRICS_DIR=`echo $APP_HOME/metrics-0.1 | tr -s /` # ensure that there aren't double /'s
METRICS_CTL_SCRIPT="$METRICS_DIR/${application}_metrics_ctl.sh"

# check that the proxy pass include directory exists
[ -d "/etc/httpd/conf.d/libra/${uuid}_${namespace}_${application}" ] || error "httpd conf dir not available" 136

#
# Create the core of the application
#
if [ -d "$METRICS_DIR" ]
then
    client_error "Embedded metrics-0.1 already attached to $application"
    exit 132
fi
mkdir -p "$METRICS_DIR"
pushd "$METRICS_DIR" > /dev/null
mkdir -p conf conf.d logs run sessions tmp
ln -s /usr/lib64/httpd/modules modules
ln -s /etc/httpd/conf/magic conf/magic

sed -e "s,TEMPLATE_SET_ME_SESSION_SAVE_PATH,$METRICS_DIR/sessions/," \
    -e "s,TEMPLATE_SET_ME_UPLOAD_TMP_DIR,$METRICS_DIR/tmp/," $CART_CONF_DIR/php.ini > $METRICS_DIR/conf/php.ini 
popd > /dev/null

#
# Find an open localhost IP
#
IP=`embedded_find_open_ip $uid $APP_HOME`

#
# Create simple application specific data
#

$CART_INFO_DIR/bin/deploy_httpd_config.sh $application $uuid $IP

#
# Create simple metrics start / stop script
#
ln -s $CART_INFO_DIR/bin/metrics_ctl.sh $METRICS_CTL_SCRIPT

#
# Setup Permissions
#

chown $user_id.$group_id -R $METRICS_DIR || error "Failed to chown new metrics space.  Please contact support" 123
# Secure script and config dirs.
chown root.root -R "$METRICS_DIR/conf" "$METRICS_DIR/conf.d"
chown root.root "$METRICS_DIR"
observe_setup_var_lib_dir "$METRICS_DIR"

#
# Create environment variables. This MUST be before starting metrics as the CTL script relies on these.
#
echo "export OPENSHIFT_METRICS_IP='$IP'" > $APP_HOME/.env/OPENSHIFT_METRICS_IP
echo "export OPENSHIFT_METRICS_APP_DIR='$METRICS_DIR/'" > $APP_HOME/.env/OPENSHIFT_METRICS_APP_DIR
echo "export OPENSHIFT_METRICS_CTL_SCRIPT='$METRICS_CTL_SCRIPT'" > $APP_HOME/.env/OPENSHIFT_METRICS_CTL_SCRIPT


#
# Start the server
#
run_as_user "$METRICS_CTL_SCRIPT start" || error "Failed to start ${application}" 121

#
# Create virtualhost definition for apache
#
$CART_INFO_DIR/bin/deploy_httpd_proxy.sh $application $namespace $uuid $IP

restart_httpd_graceful


# Grab the env vars so we can print them
. $APP_HOME/.env/OPENSHIFT_APP_DNS


client_result ""
client_result "metrics 0.1 added."
#client_result "metrics 0.1 added.  Please make note of these credentials:"
#client_result ""
#client_result "   User: $OPENSHIFT_METRICS_USERNAME"
#client_result "   Password: $OPENSHIFT_METRICS_PASSWORD"
client_result ""
client_result "URL: https://$OPENSHIFT_APP_DNS/metrics/"

set_app_info "URL: https://$OPENSHIFT_APP_DNS/metrics/"
