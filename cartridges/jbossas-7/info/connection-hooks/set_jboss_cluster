#!/bin/bash

# Adds a gear to the haproxy configuration.

# Exit on any errors
set -e

list=
kvargs=$(echo "${@:4}" | tr -d "\n" )
for arg in $kvargs; do
    ip=$(echo "$arg" | cut -f 2 -d '=' | tr -d "'")
    if [ -z "$list" ]; then
        list="export OPENSHIFT_JBOSS_CLUSTER=$ip[7600]"
    else
        list="$list,$ip[7600]"
    fi
done

echo "$list" > /var/lib/libra/$3/.env/OPENSHIFT_JBOSS_CLUSTER


