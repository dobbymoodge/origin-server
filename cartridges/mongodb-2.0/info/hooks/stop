#!/bin/bash

# Stops instance

# Exit on any errors
set -e

function print_help {
    echo "Usage: $0 app-name namespace uuid"
    echo "Stop a running application and disable it"

    echo "$0 $@" | logger -p local0.notice -t libra_mysql_stop
    exit 1
}

while getopts 'd' OPTION
do
    case $OPTION in
        d) set -x
        ;;
        ?) print_help
        ;;
    esac
done


[ $# -eq 3 ] || print_help

CART_DIR=/usr/libexec/li/cartridges
source ${CART_DIR}/abstract/info/lib/util

setup_basic_hook "$1" $2 $3

MONGODB_DIR="$APP_HOME/mongodb-2.0/"
mongodbctl="$MONGODB_DIR/${application}_mongodb_ctl.sh"

#
# Stop application
#
/bin/su -s /bin/sh "$uuid" -c "runcon -t libra_t -l $mcs_level $mongodbctl stop"
touch "$MONGODB_DIR/run/stop_lock"
