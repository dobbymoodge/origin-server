#!/bin/bash

# Start the application httpd instance

# Exit on any errors
set -e

function print_help {
    echo "Usage: $0 app-name namespace uuid"
    echo "Start a running application"

    echo "$0 $@" | logger -p local0.notice -t libra_httpd_start
    exit 1
}

while getopts 'd' OPTION
do
    case $OPTION in
        d) set -x
        ;;
        ?) print_help
        ;;
    esac
done


[ $# -eq 3 ] || print_help

CART_DIR=/usr/libexec/li/cartridges
source ${CART_DIR}/abstract/info/lib/util

setup_configure "$1" $2 $3

import_env_vars

proxy_port=$(find_next_proxy_port $uuid "$OPENSHIFT_CACHE_HOST:$OPENSHIFT_CACHE_PORT")
ret=$?
if [ $ret -ne 0 ]; then
  client_error "$proxy_port"
  exit $ret
fi
echo "export OPENSHIFT_CACHE_PROXY_PORT=$proxy_port" > $APP_HOME/.env/OPENSHIFT_CACHE_PROXY_PORT
cart_data "PROXY_HOST=$OPENSHIFT_APP_DNS"
cart_data "PROXY_PORT=$proxy_port"
cart_data "HOST=$OPENSHIFT_CACHE_HOST"
cart_data "PORT=$OPENSHIFT_CACHE_PORT"
exit 0
