#!/bin/bash

# Creates a Memcached server instance

# Exit on any errors
set -e

function print_help {
    echo "Usage: $0 app-name namespace uuid"

    echo "$0 $@" | logger -p local0.notice -t libra_memcached_configure
    exit 1
}

while getopts 'd' OPTION
do
    case $OPTION in
        d) set -x
        ;;
        ?) print_help
        ;;
    esac
done


[ $# -eq 3 ] || print_help

CART_DIR=${CART_DIR:=/usr/libexec/li/cartridges}
source ${CART_DIR}/abstract/info/lib/util

cart_type="memcached-1.4"
setup_embedded_configure "$1" $2 $3

source ${CART_INFO_DIR}/lib/util

MEMCACHED_DIR="$APP_HOME/$cart_type/"
MEMCACHED_PORT=11211

#
# Detect IP
. $APP_HOME/.env/OPENSHIFT_INTERNAL_IP
IP=$OPENSHIFT_INTERNAL_IP

#
# Create the core of the application
#

if [ -d "$MEMCACHED_DIR" ]; then
    client_error "Embedded memcached-1.4 already attached to $application"
    exit 132
fi

if [ -f $APP_HOME/.env/OPENSHIFT_CACHE_TYPE ]; then
    source $APP_HOME/.env/OPENSHIFT_CACHE_TYPE
    client_error "Only 1 embedded cache permitted - application currently has '$OPENSHIFT_CACHE_TYPE'"
    exit 133
fi

mkdir -p "$MEMCACHED_DIR"
pushd "$MEMCACHED_DIR" > /dev/null
mkdir -p log etc data socket pid run
chmod go-rwx data
popd > /dev/null

#
# Create simple Memcached start / stop script
#
ln -s $CART_INFO_DIR/bin/memcached_ctl.sh $MEMCACHED_DIR/${application}_memcached_ctl.sh

#
# Setup Permissions
#
chmod +x "$MEMCACHED_DIR/"*.sh || error "Failed to chmod new application scripts" 122
chown $user_id.$group_id -R $MEMCACHED_DIR/ || error "Failed to chown new application space.  Please contact support" 123
# Secure script and root dir (so they can't chown the script)
chown root.root "$MEMCACHED_DIR" "$MEMCACHED_DIR"/*.sh
observe_setup_var_lib_dir "$MEMCACHED_DIR"

#
# Overlay default configuration files.
#
pushd "$MEMCACHED_DIR" > /dev/null
observe_setup_var_lib_dir "$MEMCACHED_DIR"
sed "s,RHC_MEMCACHED_DIR,$MEMCACHED_DIR," $CART_ETC_DIR/memcached.conf > $MEMCACHED_DIR/data/memcached.conf
sed -i "s,RHC_BIND_ADDR,$IP," $MEMCACHED_DIR/data/memcached.conf
popd > /dev/null

#
# Start Memcached
#
start_memcached

#
# Setup Environment Variables
#
echo "export OPENSHIFT_CACHE_TYPE='memcached'" > $APP_HOME/.env/OPENSHIFT_CACHE_TYPE
echo "export OPENSHIFT_CACHE_HOST='$IP'" > $APP_HOME/.env/OPENSHIFT_CACHE_HOST
echo "export OPENSHIFT_CACHE_PORT='$MEMCACHED_PORT'" > $APP_HOME/.env/OPENSHIFT_CACHE_PORT
echo "export OPENSHIFT_CACHE_SOCKET='${MEMCACHED_DIR}/socket/memcached.sock'" > $APP_HOME/.env/OPENSHIFT_CACHE_SOCKET
echo "export OPENSHIFT_CACHE_URL='memcached://admin:$password@$IP:5432/'" > $APP_HOME/.env/OPENSHIFT_CACHE_URL
echo "export OPENSHIFT_CACHE_CTL_SCRIPT='$MEMCACHED_DIR/${application}_memcached_ctl.sh'" > $APP_HOME/.env/OPENSHIFT_CACHED_CTL_SCRIPT

client_result ""
client_result "Memcached 1.4 cache added. "
client_result ""
client_result "Connection URL: memcached://$IP:$MEMCACHED_PORT/"
client_result ""

set_app_info "Connection URL: memcached://$IP:$MEMCACHED_PORT/"
