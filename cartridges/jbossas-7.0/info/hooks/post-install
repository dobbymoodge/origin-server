# Confirms all required php bits are in place or fails

set -e


# The name of the jbossas cartridge dir under /usr/libexec/li/cartridges
jboss_version=jbossas-7.0.0

CART_DIR=/usr/libexec/li/cartridges
source ${CART_DIR}/abstract/info/lib/util

load_node_conf

[ -z "$CARTRIDGE_DIR" ] && CARTRIDGE_DIR="/usr/libexec/li/cartridges/${jboss_version}/"

function print_help {
    echo "Usage: uuid"
    exit 1
}

function quit {
    echo -e "$1" 1>&2
    exit 5
}

while getopts 'd' OPTION
do
    case $OPTION in
        d) set -x
        ;;
        ?) print_help
        ;;
    esac
done

[ $# -eq 1 ] || print_help

uuid=$1

JBOSS_HOME=/etc/alternatives/jbossas-7.0
PSQL_JDBC_JAR=/usr/share/java/postgresql-jdbc3.jar
PSQL_MODULE_SUBDIR=org/postgresql/jdbc/main

mkdir -p $JBOSS_HOME/modules/$PSQL_MODULE_SUBDIR
ln -fs $PSQL_JDBC_JAR  $JBOSS_HOME/modules/$PSQL_MODULE_SUBDIR

cat > $JBOSS_HOME/modules/$PSQL_MODULE_SUBDIR/module.xml  <<MEOF
<?xml version="1.0" encoding="UTF-8"?>
<module xmlns="urn:jboss:module:1.0" name="org.postgresql">
   <resources>
      <resource-root path="$(filename $PSQL_JDBC_JAR)"/>
   </resources>
   <dependencies>
      <module name="javax.api"/>
      <module name="javax.transaction.api"/>
   </dependencies>
</module>
MEOF


