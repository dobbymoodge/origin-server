#!/usr/bin/ruby
#
require 'rubygems'
require 'daemons'

options = {
    :backgrace => true,
    :ontop => false,
    :log_output => true,
    :log_dir => "#{ENV['OPENSHIFT_LOG_DIR']}",
    :log_output => true,
    :dir_mode => :normal,
    :dir => "#{ENV['OPENSHIFT_RUN_DIR']}",
    :multiple => false,
    
}

Daemons.run('/usr/libexec/li/cartridges/haproxy-1.4/info/bin/haproxy_ctld', options)
