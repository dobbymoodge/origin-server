#!/bin/bash

# Executes before configure.  Gives opportunity to make any callbacks to the broker before configure runs.  

# Exit on any errors
set -e

while getopts 'd' OPTION
do
    case $OPTION in
        d) set -x
        ;;
        ?) print_help
        ;;
    esac
done


[ $# -eq 3 ] || print_help

function generate_ssh_keys {
    /bin/mkdir -p $APP_DIR/data/.ssh/
    /usr/bin/ssh-keygen -N '' -f $APP_DIR/data/.ssh/haproxy_id_rsa > /dev/null

    /bin/chown root.$uuid -R "$APP_DIR/data/.ssh/"
    chmod 0750 "$APP_DIR/data/.ssh/"
    chmod 0600 "$APP_DIR/data/.ssh/haproxy_id_rsa"
    chmod 0600 "$APP_DIR/data/.ssh/haproxy_id_rsa.pub"
    observe_setup_var_lib_dir "$APP_DIR/data/.ssh/"
}

CART_DIR=${CART_DIR:=/usr/libexec/li/cartridges}
app_type="haproxy-1.4"

source ${CART_DIR}/abstract/info/lib/util

setup_configure "$1" $2 $3

check_app_dir_doesnt_exist

#
# Setup the base of the application
#

mkdir -p "$APP_DIR"
pushd "$APP_DIR" > /dev/null
create_standard_app_dirs
mkdir logs
popd > /dev/null

#
# Generate key pair
#
generate_ssh_keys

public_key=$(cat $APP_DIR/data/.ssh/haproxy_id_rsa.pub)
set -- $public_key
add_ssh_key "$2"

add_broker_auth_key
