# Destroys http instance

if [ -f '/etc/libra/node.conf' ]
then
    . /etc/libra/node.conf
elif [ -f 'node.conf' ]
then
    . node.conf
else
    echo "node.conf not found.  Cannot continue" 1>&2
    exit 3
fi

if [ -f '/etc/libra/node_data.conf' ]
then
    . /etc/libra/node_data.conf
elif [ -f 'node_data.conf' ]
then
    . node_data.conf
else
    echo "node_data.conf not found.  Cannot continue" 1>&2
    exit 3
fi

CART_DIR=${CART_DIR:=/usr/libexec/li/cartridges}

function print_help {
    echo "Usage: $0 app-name namespace uuid"

    echo "$0 $@" | logger -p local0.notice -t libra_php_deconfigure
    exit 1
}

function error {
    echo "$1" 1>&2
}

function destroy_repo {
    application="$1"
    uuid="$2"
    APP_HOME="${libra_dir}/${uuid}"
    
    if [ ! -d $APP_HOME ]; then echo "ERROR: Application ${uuid} not found!  Please create." 1>&2; exit 2; fi
    
    GIT_DIR=$APP_HOME/git/$application.git
    rm -rf $GIT_DIR || error "Could not remove ${application}" 108
}

function rm_symlink {
    # Check if unobfuscate is set in /etc/libra/node.conf
    # If it is set, remove symlink

    namespace=$1
    appname=$2

    if [ $unobfuscate -eq 1 ]
    then        
        rm "${libra_dir}/${appname}-${namespace}"
    fi
}

while getopts 'd' OPTION
do
    case $OPTION in
        d) set -x
        ;;
        ?) print_help
        ;;
    esac
done


[ $# -eq 3 ] || print_help

namespace=`basename $2`
application="$1"
uuid=$3

APP_HOME="$libra_dir/$uuid/"
APP_DIR="$APP_HOME/$application"

if [ ! -d "$APP_DIR" ]
then
  exit 125
fi

uid=$(id -u "$uuid")
mcs_level=`${CART_DIR}/li-controller/info/bin/mcs_level $uid`

#
# OpenShift values so they can be used:
#
for f in $APP_HOME/.env/*
do
    . $f
done

jenkins_pid=$(/bin/cat ${OPENSHIFT_RUN_DIR}/jenkins.pid)
runuser --shell /bin/sh "$uuid" -c "runcon -t libra_t -l $mcs_level $OPENSHIFT_APP_CTL_SCRIPT stop" || echo "Failed to stop ${OPENSHIFT_APP_NAME}" 1>&2

for i in {1..12}
do
    if ! /bin/kill -0 $jenkins_pid > /dev/null 2>&1
    then
        echo "Waiting for stop to finish"
        sleep .2
        if [ $i > 9 ]
        then
            /bin/kill -9 $jenkins_pid
        fi
    else
        break
    fi
done

#rm -rf "$APP_DIR"
runcon -l s0-s0:c0.c1023 rm -rf "$APP_DIR"

#
# Remove virtualhost definition for apache
#
rm -rf /etc/httpd/conf.d/libra/${uuid}_${namespace}_${application}.conf || error "Could not remove apache definition" 156
/sbin/service httpd configtest 2> /dev/null && /sbin/service httpd graceful || error "Failed to restart master httpd, please contact support" 120
