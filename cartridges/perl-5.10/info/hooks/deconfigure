# Destroys http instance

if [ -f '/etc/libra/node.conf' ]
then
    . /etc/libra/node.conf
elif [ -f 'node.conf' ]
then
    . node.conf
else
    echo "node.conf not found.  Cannot continue" 1>&2
    exit 3
fi

if [ -f '/etc/libra/node_data.conf' ]
then
    . /etc/libra/node_data.conf
elif [ -f 'node_data.conf' ]
then
    . node_data.conf
else
    echo "node_data.conf not found.  Cannot continue" 1>&2
    exit 3
fi

CART_DIR=${CART_DIR:=/usr/libexec/li/cartridges}

function print_help {
    echo "Usage: $0 app-name namespace uuid"

    echo "$0 $@" | logger -p local0.notice -t libra_perl_deconfigure
    exit 1
}

function error {
    echo "$1" 1>&2
}

function destroy_repo {
    application="$1"
    uuid="$2"
    APP_HOME="${libra_dir}/${uuid}"
    
    if [ ! -d $APP_HOME ]; then echo "ERROR: Customer ${uuid} not found!  Please create." 1>&2; exit 2; fi
    
    GIT_DIR=$APP_HOME/git/$application.git
    rm -rf $GIT_DIR || error "Could not remove ${application}" 108
}

while getopts 'd' OPTION
do
    case $OPTION in
        d) set -x
        ;;
        ?) print_help
        ;;
    esac
done


[ $# -eq 3 ] || print_help

namespace=`basename $2`
application="$1"
uuid=$3

APP_HOME="$libra_dir/$uuid/"
APP_DIR="$APP_HOME/$application"

if [ ! -d "$APP_DIR" ]
then
  exit 125
fi

uid=$(id -u "$uuid")
mcs_level=`${CART_DIR}/li-controller/info/bin/mcs_level $uid`

#
# Destroy git app repo
#

destroy_repo $application $uuid

runuser --shell /bin/sh "$uuid" -c "runcon -t libra_t -l $mcs_level $APP_DIR/${application}_ctl.sh stop" || echo "Failed to stop ${application}" 1>&2
if [ -f "$APP_DIR/logs/error_log" ]
then
  /usr/sbin/lsof -t "$APP_DIR/logs/error_log" | /usr/bin/xargs /bin/kill -9
fi

# Confirm pid is gone before removing apps
i=0
while [ -f ${APP_DIR}/run/httpd.pid ] && [ $i -lt 30 ]
    do
    sleep .1
    i=$(($i + 1))
done
#rm -rf "$APP_DIR"
runcon -l s0-s0:c0.c1023 rm -rf "$APP_DIR"

${CART_DIR}/li-controller/info/bin/rm_unobfuscated_app_home $namespace $application

#
# Remove virtualhost definition for apache
#
rm -rf /etc/httpd/conf.d/libra/${uuid}_${namespace}_${application}.conf /etc/httpd/conf.d/libra/${uuid}_${namespace}_${application} || error "Could not remove apache definition" 156
/sbin/service httpd configtest 2> /dev/null && /sbin/service httpd graceful || error "Failed to restart master httpd, please contact support" 120
