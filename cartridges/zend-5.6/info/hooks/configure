#!/bin/bash

# Creates a php instance

# Exit on any errors
set -e

function print_help {
    echo "Usage: $0 app-name namespace uuid git-url"

    echo "$0 $@" | logger -p local0.notice -t stickshift_php_configure
    exit 1
}

while getopts 'd' OPTION
do
    case $OPTION in
        d) set -x
        ;;
        ?) print_help
        ;;
    esac
done

[ $# -eq 4 -o $# -eq 3 ] || print_help

cartridge_type="zend-5.6"
source "/etc/stickshift/stickshift-node.conf"
source ${CARTRIDGE_BASE_PATH}/abstract/info/lib/util

setup_configure "$1" $2 $3 $4
disable_cgroups

check_cartridge_dir_doesnt_exist

# Repo
if [ ! -d $git_url ]; then
	clone_external_git_repo $application $user_id $group_id $uuid $git_url
else
	clone_git_repo $application $user_id $group_id $uuid "zend 5.6"
fi

#
# Create the core of the application
#
create_cartridge_instance_dir "$cartridge_type"
ZENDCART_INSTANCE_DIR=$(get_cartridge_instance_dir "$cartridge_type")
pushd "$ZENDCART_INSTANCE_DIR" > /dev/null
create_standard_app_dirs
mkdir conf conf.d logs sessions
mkdir -p phplib/pear/{docs,ext,php,cache,cfg,data,download,temp,tests,www}
ln -s /usr/lib64/httpd/modules modules
ln -s /etc/httpd/conf/magic conf/magic
mkdir -p $ZENDCART_INSTANCE_DIR/etc
#sed -e "s,TEMPLATE_SET_ME_SESSION_SAVE_PATH,$ZENDCART_INSTANCE_DIR/sessions/," \
#    -e "s,TEMPLATE_SET_ME_UPLOAD_TMP_DIR,$ZENDCART_INSTANCE_DIR/tmp/," $CART_CONF_DIR/php.ini > $ZENDCART_INSTANCE_DIR/etc/php.ini

source_if_exists "$APP_HOME/.env/OPENSHIFT_REPO_DIR"
sed -e "s,TEMPLATE_SET_ME_SESSION_SAVE_PATH,$ZENDCART_INSTANCE_DIR/sessions/," \
    -e "s,TEMPLATE_SET_ME_UPLOAD_TMP_DIR,$ZENDCART_INSTANCE_DIR/tmp/," \
    -e "s,TEMPLATE_ZEND_INSTANCE_DIR,$ZENDCART_INSTANCE_DIR," \
    -e "s,TEMPLATE_OPENSHIFT_REPO_DIR,$OPENSHIFT_REPO_DIR," $CART_CONF_DIR/php.ini > $ZENDCART_INSTANCE_DIR/etc/php.ini
popd > /dev/null

#
# Find an open localhost IP
#
IP=`find_open_ip $uid $uuid`

$CART_INFO_DIR/bin/deploy_httpd_config.sh $ZENDCART_INSTANCE_DIR $application $uuid $IP
$CART_INFO_DIR/bin/zendserver_gui_config.sh $ZENDCART_INSTANCE_DIR $IP

#copy over zen config files
ZEND_USER_FILES="/usr/libexec/stickshift/cartridges/${cartridge_type}/files/user-files"
echo "ZEND_USER_FILES ${ZEND_USER_FILES}"
zend_sandbox_dir="$APP_HOME/.sandbox/$uuid/zend"
mkdir -p "$zend_sandbox_dir"
chown ${user_id}:${group_id} "$zend_sandbox_dir"
$CART_INFO_DIR/bin/zend_configure_filesystem_on_gear.sh ${ZEND_USER_FILES} ${ZENDCART_INSTANCE_DIR} ${user_id} ${group_id} ${IP} || error "Failed to copy files to cartridge directory" 121
run_as_user "$CART_INFO_DIR/bin/zend_configure_filesystem_on_gear.sh ${ZEND_USER_FILES} ${ZENDCART_INSTANCE_DIR} ${user_id} ${group_id} ${IP}" || error "Failed to create symlinks in sandbox namespace" 121
chown root:${group_id} "$zend_sandbox_dir"

# Pear requires a special pearrc file, this is that file:
pear config-create "$ZENDCART_INSTANCE_DIR"/phplib/pear/ "$APP_HOME"/.pearrc > /dev/null 2>&1
pear -c "$APP_HOME"/.pearrc config-set php_ini "$ZENDCART_INSTANCE_DIR"/etc/php.ini > /dev/null 2>&1
pear -c "$APP_HOME"/.pearrc config-set auto_discover 1 > /dev/null 2>&1
observe_setup_var_lib_file "$APP_HOME"/.pearrc

populate_repo_dir

secure_app_dir

secure_cart_instance_dir

secure_conf_dirs

observe_setup_app_and_git_dirs

observe_setup_cart_instance_dir

#
# Create environment variables
#
create_standard_cart_env_vars
create_standard_env_uservars
create_standard_network_env_vars $IP
create_cart_network_env_vars $IP
create_standard_repo_dir_env_var
create_standard_path_env_var

observe_setup_env_uservars_dir

if [ ! -d $git_url ]; then
    #
    # Resolve app dependencies for template
    #
    resolve_application_dependencies $uuid $application &
else
    #
    # Start the server
    #
    start_app
fi

#
# Create virtualhost definition for apache
#
export CART_INFO_DIR
$CART_INFO_DIR/bin/deploy_httpd_proxy.sh $application $namespace $uuid $IP
restart_httpd_graceful

client_result "Note:  You can access the Zend Server Console at: https://${application}-${namespace}.${CLOUD_DOMAIN}/ZendServer"
enable_cgroups
