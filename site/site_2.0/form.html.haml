          %input{ :type => "password",
                    :placeholder => "at least 8 characters" }
                    
          %input{ :type => "password",
                    :placeholder => "please confirm" }
        
        %label
          Send me lame newsletters
          %input{ :type => 'radio',
                  :name => 'newsletter',
                  :value => 'yes' }
        
