<%
  ajax_response = {:data => {}, :event => 'ssh_key_form_return'}
  if @express_ssh_key.errors.any?
    ajax_response[:status] = 'error'
    ajax_response[:data] = @express_ssh_key.errors.full_messages.join("; ")
  else
    ajax_response[:status] = 'success'
    ajax_response[:data] = {
      :key_html => render(:partial => 'widgets/ssh_widget'),
      :ssh => @primary_ssh_key.key_string
    }
  end
%>
<%=raw ajax_response.to_json() %>

