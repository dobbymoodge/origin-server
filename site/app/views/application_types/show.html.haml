%section.main
  .content
    %h1 Configure New Application
    = render :partial => @application_type, :locals => {:hide_link => true}
    = semantic_form_for @application do |f|
      = f.inputs do
        = f.input :name, :required => true
        = f.input :domain_id
      = f.buttons do
        = f.commit_button
