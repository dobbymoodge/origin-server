- content_for :title, 'Change Password'
- breadcrumb_for_settings 'Change your password'

%h1 Change your password

= semantic_form_for @user, :url => edit_account_password_path, :simple => true, :method => :put do |f|
  %p When choosing a password we recommend using numbers, symbols, and upper and lower case letters for extra security.
  = f.inputs do
    - if @token.nil?
      = f.input :old_password, :required => true
      %p.forgot
        = link_to("Forget your password?  Reset it now", new_account_password_path)
    - else
      = hidden_field_tag 'token', @token

    = f.input :password, :as => :password, :required => true, :label => 'New password'
    = f.input :password_confirmation, :as => :password, :required => true, :label => 'Retype new password'

  = f.buttons do
    = link_to "Cancel", settings_path, :class => 'btn'
    = f.commit_button :label => 'Change Password'
    = f.loading
