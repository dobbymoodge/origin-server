- input_html = { :class => input_class } if defined? input_class

= semantic_form_for key, :html => {:class => 'form-horizontal'} do |f|
  = f.semantic_errors :type
  = f.inputs do
    = f.input :name, :label => 'Key name', :placeholder => 'A name for your key'
    = f.input :raw_content, :as => :text, :label => 'Paste the contents of your public key file', :input_html => input_html, :placeholder => 'Public key contents'
  = f.buttons do
    = f.commit_button :label => 'Create'
    = link_to "Cancel", account_path, :class => 'btn'
    = f.loading
