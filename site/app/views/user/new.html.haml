- content_for :ribbon, 'Sign up for OpenShift'

#new-user
  = semantic_form_for @user, :url => account_path, :simple => true, :html => {:class => 'form-horizontal'} do |form|
    %input{:type => "hidden", :name => "redirectUrl", :value => (defined?(@redirectUrl) ? @redirectUrl : '/app/user/complete') }
    = form.hidden_field :cloud_access_choice, :value => CloudAccess::EXPRESS
    = form.semantic_errors
    = form.inputs do
      = form.input :email_address, :input_html => { :type => 'email', :class => 'input-xlarge', :placeholder => 'Enter a valid email address', :autofocus => true }
      = form.input :password, :input_html => { :class => 'input-xlarge', :autocomplete => 'off', :placeholder => 'At least 6 characters', :maxlength => '50' }
      = form.input :password_confirmation, :input_html => { :class => 'input-xlarge', :autocomplete => 'off', :placeholder => 'Enter it again', :maxlength => '50' }

      - if @user.promo_code.nil?
        .control-group
          .controls
            =link_to 'Have a promo code to enter?', 
              new_account_path(:web_user => {:promo_code => ' '}),
              :style => 'font-size: 14px;', 
              :title => "Don't worry if you don't have one - I never got one either"
      - else
        = form.input :promo_code, :label => 'Promotional Code', :required => false, :input_html => { :class => 'input-xlarge' }

    = form.inputs do
      = input_recaptcha(:errors => @user.errors[:captcha])

      .control-group
        By signing up you agree to the 
        = link_to 'Terms of Service', legal_site_terms_path
        and the
        = link_to 'Privacy Policy', legal_openshift_privacy_path

      .form-actions
        = form.commit_button 'Sign Up', :button_html => {:class => 'btn'}
        or
        = link_to 'sign in if you have an account', login_path
