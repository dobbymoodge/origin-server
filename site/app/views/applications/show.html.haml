%h1 Applications
.content

  .row
    .span8
      .hero-unit
        %h1.pull-left= @application.name
        %a.btn.btn-primary.pull-right{:href => @application.web_url} Access application Â»
        .app_url.clear-both
          %strong= link_to @application.web_url, @application.web_url
      %dt
        Type
      %dd.app_type
        %strong= @application.framework_name + ": "
        = @application.application_type.description
    
      %dt
        Created
      %dd.app_creation_time
        = "#{time_ago_in_words(@application.creation_time)} ago"
    
      - if not @application.aliases.empty?
        %dt
          Aliases
        %dd.app_aliases
          - @application.aliases.each do |i|
            = i
    
      %dt
        Repository
      %dd
        %pre.command-line= @application.git_url
    
      %div
        = link_to "back to applications list...", applications_path
        = link_to("Delete", delete_application_path(@application))
    .span4
      %aside.postit
        .tape &nbsp;
        %h4 Client tools
        %ul
          %li= link_to "OpenShift Express User Guide", "https://www.redhat.com/openshift/community/sites/default/files/documents/OpenShift_Express-User_Guide-en-US.pdf" 
          %li= link_to "Sync your OpenShift repo with an existing Git repo", "https://www.redhat.com/openshift/community/sites/default/files/documents/OpenShift_Express-User_Guide-en-US.pdf"
        - if @application.application_type.help_topics and not @application.application_type.help_topics.empty?
          %h4= @application.framework_name
          %ul
            - @application.application_type.help_topics.each do |key, value|
              %li= link_to key, value
        %h4 MySQL
        %ul
          %li= link_to "Check the MySQL 5.1 Documentation", "#" 
          %li= link_to "Solve connectivity issues", "#" 
    
