%header
  %h1
    = app_name
%dl.app_info
  %dt
    Public url
  %dd.app_url
    = app_link_to @userinfo, app_name

  %dt
    Repository
  %dd.app_git
    = git_url_for @userinfo, app_name

  %dt
    Type
  %dd.app_type
    = app['framework'].split('-')[0]
%div
  = link_to 'Delete...', delete_applications_path, :app_name => app_name
