%section#app-list.span7
  %header
    %h3.invisible 
      Application list
  - @applications.each do |application|
    .app-block.base
      .row
        %a{:href => application_path(application)}
          -#%span.span1
            &nbsp;
            -# app type icon placeholder
          %span.span4.offset1
            %h2= application.name
            .app-full-path
              = application.web_url
          %span.span2
            -#.emblem
              %img{:src => "/app/images/console/gear-bars.png"}
              %span.gear-numbers
                -# gear number placeholder
            %span.sprite.app-arrow
              &nbsp;

  / add btn-toolbar here and fix icon-add to be theme independent
  .base.right
    %a.btn.btn-primary.btn-large{:href => application_types_path}
      Add
      %strong Application
      %i.icon-add

%section#account-digest.span5
  .digest-bg
    %aside#secondary
      #assistance
        %h5 OpenShift Help
        %ul.unstyled
          - console_help_links.each do |l|
            %li= link_to l[:name], l[:href]
          %li= link_to 'More help »', console_help_path

        %h5 Popular FAQs
        %ul.unstyled
          - console_faq_links.each do |l|
            %li= link_to l[:name], l[:href]
          %li= link_to 'More FAQs »', faq_url
