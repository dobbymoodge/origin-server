- lots_of_applications = @applications.length > 10
- application_partial = lots_of_applications ? 'applications/application_compact' : 'applications/application_overview'

%section#console-mast
  .row
    %ul.unstyled-flat
      %li.span5
        %h1 All Applications
      %li.span5
        %img{:src => 'http://placehold.it/60&text=img'}
        %img{:src => 'http://placehold.it/60&text=img'}
        %img{:src => 'http://placehold.it/60&text=img'}
        %img{:src => 'http://placehold.it/60&text=img'}
      %li.span2
        .account-total $0.00

.row
  %section#app-list.span7
    %header
      %h3.invisible 
        Application list
    .app-block
      - @applications.each do |application|
        .row
          %a{:href => "#{application_path(application)}"}
            %ul.unstyled-flat
              %li.span1.wordpress
                %img{:src => 'http://placehold.it/60&text=img', :alt => 'wordpress logo'}
              %li.span5
                %h2= application.name
                = application.web_url
              %li.span1
                %a.btn{:href => "#{application_path(application)}"} Details
  %section#account-digest.span5
    %header.invisible Billing, usage and charts
    %table.table.table-striped.table-condensed
      %thead.invisible
        %tr
          %th column heading                
          %th column heading                
          %th column heading                
          %th column heading                
          %th column heading       
      %tbody
        %tr
          %td 1
          %td App name
          %td 4/10
          %td 40%
          %td $0.00
        %tr
          %td 2
          %td App name
          %td 4/10
          %td 40%
          %td $0.00
        %tr
          %td 3
          %td App name
          %td 4/10
          %td 40%
          %td $0.00
    %ul.thumbnails
      %li.span5
        %a.thumbnail{:href => '#'}
          %figure
            %img{:src => 'http://placehold.it/470x168&text=Chart+A'}
            
%div
  = link_to 'Create a New Application', application_types_path, :class => ['btn', 'btn-primary', 'btn-large']

%section#help
  .row
    %ul.unstyled-flat
      %li.span4
        %h4 Updates
        %a{:href => '#'} Latest Releases
        %p Check out what new features are available
      %li.span4
        %h4 Need Help?
        %a{:href => '#'} Check out the forum
        %p Post a question, Get the answers
      %li.span4
        %h4 Found a Bug?
        %a{:href => '#'} Report a Bug
        %p The OpenShift bug tracker is now public


