- content_for :title, 'Sign in'
- content_for :ribbon, 'Sign in to OpenShift'

#login-form
  = semantic_form_for @user, :url => login_path, :html => {:class => 'form-horizontal'} do |f|
    - if @redirectUrl.present?
      %input{:type => "hidden", :name => "redirectUrl", :value => @redirectUrl }
    = f.semantic_errors
    = f.input :rhlogin,
              :label => 'Login',
              :input_html => {:autofocus => @user.rhlogin.blank?, :placeholder => 'Your redhat.com or RHN account'}
    = f.input :password,
              :as => :password,
              :hint => link_to("Forgot your password?", new_password_path),
              :input_html => {:autofocus => @user.rhlogin.present?}
    = f.buttons do
      = f.commit_button "Sign in", :button_html =>  {:class => 'btn'}
      or 
      = link_to 'create an account', @register_url || new_account_path
