= semantic_form_for :express_domain, :url => edit_sshkey_express_domains_path, :html => { :method => :put } do |f|
  = f.inputs do
    = f.hidden_field :dom_action, :value => "update"
    = f.hidden_field :form_type, :value => 'sshkey'
    = f.input :ssh, :as => :text, :required => false, :label => "Paste your public key", :input_html => {:class => (defined?(input_class) ? input_class : 'span5')}
  = f.buttons :simple => true do
    = f.commit_button :button_html => { :class => 'btn btn-primary', :value => 'Save' }
