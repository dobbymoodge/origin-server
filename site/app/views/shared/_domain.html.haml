= form_for :express_domain, :url => edit_namespace_express_domains_path, :html => {:class => 'form-inline', :method => :put } do |f|
  = f.hidden_field :dom_action, :value => "#{dom_action}"
  = f.hidden_field :form_type, :value => 'namespace'
  %strong http://myapp-
  = f.text_field :namespace, :value => "#{@domain.namespace}", :autofocus => true
  %strong .rhcloud.com
  = f.submit "Save", :class => 'btn btn-primary'
