= form_for :express_domain, :url => express_domains_path, :html => {:style => 'width:auto;'} do |f|
  = f.hidden_field :dom_action, :value => 'create'
  = f.hidden_field :form_type, :value => 'domain'
  %div.inline
    = f.label :namespace, "http://myapp-", :style => 'display:inline'
    = f.text_field :namespace, :style => 'display:inline'
    = f.label :namespace, ".rhcloud.com", :style => 'display:inline'
    = f.submit "Create", :style => 'display:inline;width:auto;'
