- content_for :stylesheets do
  = stylesheet_link_tag 'site.css', :media => 'all'

%a.skip-navigation{:href => '#content', :accesskey => '2'} Skip to main content

%header
  #top.section-top
    .container
      .pull-left= link_to "Sign up for the newsletter >", "signup_news"
      .pull-right.login
        = link_to "Sign in", "signin", :class => 'btn btn-small'
        - ['f', 'g', 't'].each do |p|
          = link_to p, :class => 'btn btn-small login-provider' do
            %img{:alt => p}
  #nav.section-nav.lift-counter
    .navbar
      .container
        -# Was .nav-collapse, has some issues
        .brand
          %a{:href => '.'}
            .brand-image
            .brand-text
              %strong> Open
              Shift
        %ul.nav
          %li.active
            = link_to "." do
              %span Learn More
          %li
            = link_to "dev_center" do
              %span Documentation
          %li.divider &nbsp;
          %li
            = link_to "console" do
              %span Console
          %li
            = link_to "community" do
              %span Community

    .messaging
      .container
        .primary.headline
          Join the 
          %strong OpenShift Community
        .secondary This is the place to learn and engage with OpenShift users and developers. Sign in to participate.

#content.section-striped{:role => 'main'}
  .container
    .row-content
      .row.row-flush-right
        .column-nav.lift-less.grid-wrapper
          .span3
            .gutter-right
              .nav-location.headline Community

              -# may need a block or three
              %ul.menu.nav.nav-list
                %li.leaf= link_to "Overview", "overview"
                %li.expanded.active
                  = link_to "Blogs", "blog"
                  %ul.menu.nav.nav-list
                    %li.first.last.leaf= link_to "Planet OpenShift", "planet"
                %li.expanded
                  = link_to "Forums", "forums"
                  %ul.menu.nav.nav-list
                    %li.first.leaf= link_to "Express", "express_forum"
                    %li.last.leaf= link_to "Open Source", "opensource_forum"
                %li.leaf= link_to "FAQs", "faq"
                %li.leaf= link_to "Knowledge Base", "kb"
                %li.leaf= link_to "Videos", "videos"
                %li.leaf= link_to "Events", "events"
                %li.leaf= link_to "MongoDB Resources", "mongodb"

              %form.row
                .search-row
                  %label.invisible{:for => 'search'} Search
                  %input#search.search-query
                  %button.search{:type => 'submit'} 
        
        .column-content.lift.grid-wrapper
          .span9.span-flush-right
            %h1.ribbon
              OpenShift Blog
            .post-info
              .author
                %span{:style => 'display: inline-block; height: 24px; width: 24px; background-color: #555;'} P
                %span.name Issac Roth
              .metadata
                = link_to "Comments (0)", "create_comment"
              %hr
              %ul.breadcrumb
                %li
                  = link_to "Blogs", "blog"
                  %span.divider &gt;
                %li
                  = link_to "February 7, 2012", "blogs_on_feb_7"
                  %span.divider &gt;

