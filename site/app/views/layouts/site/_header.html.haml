#top.section-top
  .container
    .pull-left
      = link_to "Sign up for the newsletter Â»", newsletter_signup_url
    .pull-right.login
      -if session[:login]
        = link_to session[:login], "console", :class => 'btn btn-small'
        = link_to 'Sign out', logout_path, :class => 'btn btn-small'
      -else
        = link_to "Sign In", "signin", :class => 'btn btn-small'

      - ['f', 'g', 't'].each do |p|
        = link_to p, :class => 'btn btn-small login-provider' do
          %img{:alt => p}

%nav#nav{:class => 'section-nav' << content_for(:nav_class)}
  .navbar
    .container
      -# Was .nav-collapse, has some issues
      .brand
        = link_to root_path do
          .brand-image
          .brand-text
            %strong> Open
            Shift
      %ul.nav
        %li.active= link_to "Learn More", "styleguide/overview"
        %li= link_to "Documentation", "dev_center"
        %li.divider &nbsp;
        %li= link_to "Console", "console"
        %li= link_to "Community", "community"

  - if content_for? :header
    = yield :header
