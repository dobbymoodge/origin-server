  = javascript_include_tag '/app/javascripts/script.js'

!!! 5
-# http://paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither
-ie_html :class => 'no-js', :lang => 'en' do
  %head
    = render "layouts/head"
    = render "layouts/site/stylesheets"

  %body{ :class => "simple #{controller.controller_name} #{controller.action_name}" }

    %header
      = render 'layouts/site/header_simple'

    - if content_for? :important_layout
      = yield :important_layout

    -#= content_for?(:sub_layout) ? yield(:sub_layout) : yield
    - if content_for? :sub_layout
      = yield :sub_layout
    - else
      .section-striped#content
        .container
          %div
            .row.row-flush-right
              .offset2.column-content.lift-less.span-wrapper
                .span8.span-flush-right
                  = flashes
                  = yield

    = render 'layouts/site/javascripts'

    -# Omniture code will not load in devenvs to force it to load, just comment out if statement
    = render('shared/omniture_code', :controller => controller.controller_name, :action => controller.action_name, :event => @event ||= '', :evar8 => @evar8 ||= '') if Rails.env.production?
