-# http://paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither
-ie_html :class => 'no-js', :lang => 'en' do
  %head
    = render "layouts/head"
    = render "layouts/new_stylesheets"

  %body{ :class => "console console-transition #{controller.controller_name} #{controller.action_name}" }
    = outage_notification

    %header
      = render 'layouts/console/header'

    - if content_for?(:sub_layout) 
      = yield :sub_layout
    - else
      .container#content
        
        %section#attention
          %p.hero-unit 
            %strong Preview:
            This is a preview of the new OpenShift Management Console. There may be a few 
            minor glitches as we straighten things up &ndash; if you hit a problem or want to 
            let us know how you feel about the new console,
            #{link_to "post in the Express forum", post_to_forum_url} or
            #{link_to "file a bug", 'https://bugzilla.redhat.com/enter_bug.cgi?product=OpenShift%20Express'}.
            %br
            #{link_to "Â« Back to the Control Panel", control_panel_path}

        = flashes
        = yield

    %footer
      = render 'layouts/console/footer'

    = render 'layouts/javascripts'

    -# Omniture code will not load in devenvs to force it to load, just comment out if statement
    = render('shared/omniture_code', :controller => controller.controller_name, :action => controller.action_name, :event => @event ||= '', :evar8 => @evar8 ||= '') if Rails.env.production?
