  = javascript_include_tag '/app/javascripts/script.js'

!!! 5
-# http://paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither
-ie_html :class => 'no-js', :lang => 'en' do
  %head
    = render "layouts/head", 
      :stylesheet_partial => "layouts/stylesheets"
  
  %body{ :class => "#{controller.controller_name} #{controller.action_name}" }
    
    %header.universal
      = render "layouts/header", 
        :username => session[:login].nil? ? nil : session[:login]
    
    = content_for?(:sub_layout) ? yield(:sub_layout) : yield
      
    %footer.universal
      = render "layouts/footer"
        
    -# Javascript at the bottom for fast page loading
    = render "layouts/javascripts"
    = render 'shared/omniture_code', :controller => controller.controller_name, :action => controller.action_name, :event => @event ||= ''

  :ruby
    dialogs = [
      {:controller => 'login', :id => 'signin', :message => 'Sign in to OpenShift'},
      {:controller => 'user', :id => 'signup', :message => "Sign up for OpenShift - it's Easy!"},
      {:controller => 'user', :id => 'reset_password', :message => 'Submit a request to have your password reset'}
    ]

  - dialogs.each do |options|
    = render 'layouts/dialog', options
