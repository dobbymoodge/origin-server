-# http://paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither
-ie_html :class => 'no-js', :lang => 'en' do
  %head
    = render "layouts/head"
    = render "layouts/site/stylesheets"

  %body{ :class => "#{controller.controller_name} #{controller.action_name} #{yield :body_class}" }

    %header
      = render 'layouts/site/header'

    - if content_for? :important_layout
      = yield :important_layout

    -#= content_for?(:sub_layout) ? yield(:sub_layout) : yield
    - if content_for? :sub_layout
      = yield :sub_layout
    - else
      .section-striped#content
        .container
          .row-content
            .row.row-flush-right
              - if content_for? :navigation
                .column-nav.lift-less.grid-wrapper
                  .span3
                    = yield :navigation
                .column-content.lift.grid-wrapper
                  .span9.span-flush-right
                    - if content_for? :title
                      %h1.ribbon= yield :title
                    = flashes
                    = yield
              - else
                .column-content.lift-less.grid-wrapper
                  .span12.span-flush-right
                    - if content_for? :title
                      %h1.ribbon= yield :title
                    = flashes
                    = yield

    %footer
      = render 'layouts/footer'

    = render 'layouts/site/javascripts'

    = render('shared/tracking',
      :controller => controller.controller_name,
      :action => controller.action_name,
      :event => @event ||= '',
      :evar8 => @evar8 ||= '') if Rails.env.production?
