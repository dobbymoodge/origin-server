- content_for :page_title, 'My Account'

%h1 My Account
= flashes
.row
  - unless @domain
    .span12
      .well
        = render :partial => 'add_domain', :locals => {:domain => @domain}

  - unless @keys.present?
    .span12
      .well
        = render :partial => 'add_key', :locals => {:keys => @keys}

  .span6
    %section
      = render :partial => 'user', :locals => {:user => @user, :show_email => @show_email, :identities => @identities}

    - if @domain
      %section
        = render :partial => 'domains', :locals => {:domain => @domain}

    - if @keys.present?
      %section
        = render :partial => 'keys', :locals => {:keys => @keys}

  .span6

    %section
      - if @plan
        = render :partial => 'plan', :locals => {:plan => @plan}
      - else
        = render :partial => 'plan_info'

    %section
      = render :partial => 'authorizations', :locals => {:authorizations => @authorizations}

