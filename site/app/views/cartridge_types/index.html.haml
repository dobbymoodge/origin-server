%h1.invisible Add a New Cartidge
= cartridge_wizard_steps_create 0
- if @framework.id == 'haproxy-1.4'
  .alert 
    Cartridges are currently unable to be embedded in a scaled application. 
    We will be adding support shortly!
    In the mean time, some are available as standalone applications.
-else

%section.row
  - if @carts.empty?
    .alert.alert-info There are no cartridges that can be installed

  - else
    .span8
      %p Choose a cartridge to add to your application.
      .row
        - @carts.in_groups(2, false).each do |types|
          .span4
            = render :collection => types, :partial => 'cartridge_types/cartridge_type'


  - unless @installed.empty? and @requires.empty? and @conflicts.empty? and @blocked.empty?
    .span4
      - unless @installed.empty?
        %h3 Installed
        = render :collection => @installed, :partial => 'cartridge_types/cartridge_type', :locals => {:inactive => true, :reason => :installed}

      - unless @requires.empty? and @conflicts.empty? and @blocked.empty?
        %h3 Has Dependencies
        = render :collection => @requires, :partial => 'cartridge_types/cartridge_type', :locals => {:inactive => true, :reason => :requires}
        = render :collection => @conflicts, :partial => 'cartridge_types/cartridge_type', :locals => {:inactive => true, :reason => :conflicts}
        = render :collection => @blocked, :partial => 'cartridge_types/cartridge_type', :locals => {:inactive => true, :reason => :blocked}

- content_for :javascripts do
  :javascript
    jQuery('.cartridge_type').click(function() {
      a = $('a.btn', this)[0];
      window.location = a.href
    });
